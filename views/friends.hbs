<h1>People</h1>
{{#if friends.length}}
<p><span class="bold">There are {{friends.length}} friends</span></p>
{{else}}
<p class="bold">Zero friends here</p>
{{/if}}
<p><span class="bold">Famous {{famous}} </span></p>
{{#if users.length}}
{{#each users}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">{{name}}</span>
        <p class="price">{{email}}</p>
      </div>
      {{#if @root.isAuth}}
      <div class="card-action actions">
        <form action="/friends/add" method="POST">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-primary">Add friend</button>
        </form>
      </div>
      {{/if}}
    </div> 
  </div>
</div>
{{/each}}
{{else}}
<p>Zero people</p>
{{/if}}